
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Header Example</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous">
    </script>
    <link rel="stylesheet" href="~/css/Profile.css">
    <style>
        button:hover {
            background-color: gray;
        }

        img:hover, button:hover {
            cursor: pointer;
        }


        .nen {
            background-color: #397804;
        }

        .px-2 {
            font-size: 16px;
            margin: 0 20px;
            letter-spacing: 2px;
            font-weight: bold
        }

        .change_color:hover {
            color: blue;
        }

        .container_2 {
            display: flex;
            flex-wrap: wrap;
            justify-content: center
        }

        .header_width {
            max-width: 10800px;
        }

        .menu {
            display: none;
        }

        p {
            position: relative;
            font-size: 30px;
            color: #fcedd8;
            font-family: 'Niconne', cursive;
            font-weight: 700;
            text-shadow: 5px 5px 0px #eb452b, 10px 10px 0px #efa032;
            height: 50px;
        }

    </style>
</head>
<body>
    <header class="p-3 mb-3 border-bottom nen">
        <div class="container header_width" style="background-color: #397804; padding: 0; border-radius:0" onmouseover="this.style.transform='scale(1)'" onmouseout="this.style.transform='scale(1)'">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start header_second">
                <img class="menu" src="~/img/menu.png" alt="">
                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0 header_left">
                    <li><a href="Home" class="nav-link px-2 link-secondary" style="color: white !important">HOME</a></li>
                    <li><a href="Rank" class="nav-link px-2 link-dark" style="color: white !important">RANK</a></li>
                    <!-- <li><a href="#" class="nav-link px-2 link-dark">Products</a></li> -->
                </ul>

                <div class="dropdown text-end header_right">
                    <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://static.vecteezy.com/system/resources/thumbnails/008/442/086/small/illustration-of-human-icon-user-symbol-icon-modern-design-on-blank-background-free-vector.jpg" id="Avatar" alt="mdo" width="32" height="32" class="rounded-circle">
                    </a>
                    <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item" href="Profile">Profile</a></li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" id="SignOut">Sign out</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <div class="container mt-5">
        <h1>Your Profile</h1>

        <div class="row">
            <div class="col-md-4">
                <h2>Profile Picture</h2>
                <div class="profile-image">
                    <img src="your-avatar.jpg" alt="Your Avatar" id="profileImage" class="img-fluid">
                </div>
                <input type="file" class="form-control mt-2" id="avatar" accept="image/*" onchange="loadImage()">
            </div>
            <div class="col-md-8">
                <h2>Basic Information</h2>
                <form>
                    <div class="form-group">
                        <label for="username"><i class="fa fa-user"></i> Username</label> <!-- Thêm biểu tượng user -->
                        <input type="text" class="form-control" id="username" placeholder="Your Username">
                    </div>
                    <div class="form-group">
                        <label for="email"><i class="fas fa-envelope"></i> Email</label> <!-- Thêm biểu tượng email -->
                        <input type="email" class="form-control" id="email" placeholder="youremail@example.com">
                    </div>
                    <div class="form-group">
                        <label for="bio"><i class="fas fa-info-circle"></i> Introduction</label> <!-- Thêm biểu tượng info -->
                        <textarea class="form-control" id="bio" rows="5" placeholder="Write a short bio about yourself."></textarea>

                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-primary" id="changePassword"><i class="fas fa-key"></i> Change Password</button> <!-- Thêm biểu tượng key -->
                    </div>
                    <div class="form-group" id="passwordFields" style="display: none;">
                        <label for="currentPassword"><i class="fas fa-lock"></i> Current Password</label> <!-- Thêm biểu tượng lock -->
                        <input type="password" class="form-control" id="currentPassword" placeholder="Enter your current password">
                        <label for="newPassword"><i class="fas fa-unlock-alt"></i> New Password</label> <!-- Thêm biểu tượng unlock -->
                        <input type="password" class="form-control" id="newPassword" placeholder="Enter your new password">
                        <label for="confirmPassword"><i class="fas fa-check"></i> Confirm New Password</label> <!-- Thêm biểu tượng check -->
                        <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm your new password">
                    </div>
                    <div class="form-group">
                        <label for="wins"><i class="fas fa-trophy"></i> Wins</label>
                        <span id="winsCount">0</span>
                    </div>

                    <div class="form-group">
                        <label for="losses"><i class="fas fa-skull-crossbones"></i> Losses</label>
                        <span id="lossesCount">0</span>
                    </div>

                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save Changes</button> <!-- Thêm biểu tượng save -->
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js"></script>
    <script>
        const menu_click = document.querySelector('.header_right');
        const old_menu = document.querySelector('.dropdown-menu');

        menu_click.addEventListener('click', () => {
            if (old_menu.style.display === 'none' || old_menu.style.display === '') {
                old_menu.style.display = 'block';
            } else {
                old_menu.style.display = 'none';
            }
        });
        document.getElementById("SignOut").addEventListener('click', () => {
            var cookies = document.cookie.split(";");

            for (var i = 0; i < cookies.length; i++) {
                var cookie = cookies[i];
                var eqPos = cookie.indexOf("=");
                var name = eqPos > -1 ? cookie.substr(0, eqPos) : cookie;
                document.cookie = name + "=;expires=Thu, 01 Jan 1970 00:00:00 GMT;path=/";
            }
            window.location.href = "../Home/Login";
        });
        var allCookies = document.cookie;
        var cookiesArray = allCookies.split('; ');
        var cookies = {};
        for (var i = 0; i < cookiesArray.length; i++) {
            var cookie = cookiesArray[i].split('=');
            var cookieName = decodeURIComponent(cookie[0]);
            var cookieValue = decodeURIComponent(cookie[1]);
            cookies[cookieName] = cookieValue;
        }
        var cookie_avatar = cookies['avatar'];
        if (cookie_avatar != "") {
            document.getElementById("Avatar").src = cookie_avatar;
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="~/js/Profile.js"></script>
</body>
</html>
